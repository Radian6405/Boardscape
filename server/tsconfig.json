{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES6",
        "sourceMap": true,
        "outDir": "./dist",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "watchOptions": {
        "watchFile": "dynamicPriorityPolling"
    }
}